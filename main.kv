BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    Label:
        id: instructions_label
        text: 'Pick a suitcase!'

    GridLayout:
        id: suitcase_grid
        cols: 5
        spacing: 5
        size_hint_y: None
        height: self.minimum_height

    BoxLayout:
        size_hint_y: None
        height: '60dp'
        spacing: 10

        Button:
            text: 'Deal'
            on_press: app.make_deal()

        Button:
            text: 'No Deal'
            on_press: app.no_deal()

        Label:
            id: value
            text: app.word()
    Label:
        id: message_label
        text: 'Make your choice!'